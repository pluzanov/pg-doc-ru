"\n"
"INSERT INTO sal_emp\n"
"    VALUES ('Carol',\n"
"    '{20000, 25000, 25000, 25000}',\n"
"    '{{\"breakfast\", \"consulting\"}, {\"meeting\", \"lunch\"}}');"
