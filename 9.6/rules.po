"    GROUP BY\n"
"      seller_no,\n"
"      invoice_date\n"
"    ORDER BY\n"
"      seller_no,\n"
"      invoice_date;\n"
"\n"
"CREATE UNIQUE INDEX sales_summary_seller\n"
