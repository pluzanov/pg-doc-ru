"UPDATE shoelace_data SET sl_avail = 6\n"
"  FROM shoelace_data shoelace_data\n"
" WHERE shoelace_data.sl_name = 'sl7';"
msgstr ""
"UPDATE shoelace_data SET sl_avail = 6\n"
"  FROM shoelace_data shoelace_data\n"
" WHERE shoelace_data.sl_name = 'sl7';"

#: rules.xml:1295(programlisting)
