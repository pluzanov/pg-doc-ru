#, no-wrap
msgid ""
"CREATE RULE shoelace_ins AS ON INSERT TO shoelace\n"
"    DO INSTEAD\n"
"    INSERT INTO shoelace_data VALUES (\n"
"           NEW.sl_name,\n"
"           NEW.sl_avail,\n"
"           NEW.sl_color,\n"
"           NEW.sl_len,\n"
